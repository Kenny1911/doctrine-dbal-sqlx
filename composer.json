{
    "name": "kenny1911/doctrine-dbal-sqlx",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Kenny1911",
            "email": "o-muzyka@mail.ru"
        }
    ],
    "minimum-stability": "stable",
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "post-install-cmd": [
            "mkdir var"
        ],
        "psalm": "./tools/psalm/vendor/bin/psalm",
        "cs-fix": "PHP_CS_FIXER_IGNORE_ENV=1 ./tools/php-cs-fixer/vendor/bin/php-cs-fixer fix",
        "cs-check": "PHP_CS_FIXER_IGNORE_ENV=1 ./tools/php-cs-fixer/vendor/bin/php-cs-fixer check",
        "phpunit": "phpunit",
        "checks": [
            "@cs-check",
            "@phpunit",
            "@psalm -- --no-cache"
        ]
    },
    "require": {
        "php": "^8.1",
        "doctrine/dbal": "^3.0 || ^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.1"
    },
    "autoload": {
        "psr-4": {
            "Kenny1911\\DoctrineDbalSqlX\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kenny1911\\DoctrineDbalSqlX\\Tests\\": "tests/"
        }
    }
}
